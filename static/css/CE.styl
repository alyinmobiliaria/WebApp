/* MODULO SCREEN 160PX */

@media screen and (min-width:160px)
	html
		background black
		body
			background white
		nav.Canvas
			left 0
			// overflow hidden
			position fixed
			right 0 
			top 0
			z-index 6
		.Header
			background black
			color white
			height 30px
			line-height 30px
			padding 10px 0
			position relative	
			&-logoCon
				margin 0
				top 0
				width 200px
			&-logoTexto
				display block
				font-size 30px
				left 60px
				line-height 40px
				margin 0
				position absolute
				text-shadow 0 0 10px lightgray
				top 6px
			&-logo1
				display block
				left 5px
				margin 0
				position absolute
				top 2px
				z-index 10px
				
			&-button
				background black
				border none	
				color white
				display none
				font-size 30px
				font-weight normal
				padding 0
				position absolute
				right 5px
				top 10px
				&.is-active
					display block 
		.MainMenu
			display visible
			background black
			height auto
			left -200px
			list-style none
			margin 0
			padding 0
			position absolute
			position fixed
			top 50px
			transition .2s
			width 165px
			&.is-active
				left 0
			&-item
				-webkit-transition .2s
				height 50px
				line-height 50px
				text-align center
				text-shadow 0 0 10px Verde_D
				&:hover
					background lightgray	
			&-link
				color white
				display block
				font-size 14px
				text-decoration none
				text-transform uppercase
		section.Avatar-CE
			figure.Avatar-containerCE
				margin-bottom 0px
				margin-left auto
				margin-right auto
				width 160px
				.Avatar-img
					padding-top 37px
					width 100%
		h1.TOP
			background black
			color white
			text-align center
			font-size 100%
		section.Ranking
			background black
			.flex-container
				padding 0px
				margin 0px
				list-style none
				display -webkit-box
				display -moz-box;
				display -ms-flexbox
				display -webkit-flex
				display flex
				-webkit-flex-flow row wrap
				justify-content space-around								
				.flex-item
					background black
					padding 0px
					width 100%
					height auto
					margin-top 0px
					color: white
					font-weight bold
					.Number
						background black
						color white
						margin-top 0px
						text-align right
						font-size 100%
						margin-bottom 0px
						padding-right 20px
					.Artistas-Nombres
						background white
						color black
						margin-top 0px
						text-align center
						font-size 100%
						margin-bottom 0px
					.Album-Cover
						width 100%
					.Artista-Track
						width 100%
						margin-right auto
						margin-left auto
					.Artistas-Stats
						background Red_Mejor
						text-align right
						padding-right 30px
						font-size 100%
					.Stats
						list-style none
						width 100%
						padding 0px
						font-size 100%
						li
							margin-bottom 20px	
						.Radio	
							text-align left
							padding-left 10px
							width auto
						.Video
							text-align left
							padding-left 10px
							width auto
						.Votos
							text-align left
							padding-left 10px
							width auto
						.Estado
							text-align center
							color white
							background Up_Aly
							padding 10px
		.Footer
			text-align center
			background black
			.Footer-titulo
				color white
				margin-top 10px
				font-size 100%
			.Footer-description
				color white
				font-size 10px
				font-weight bold

